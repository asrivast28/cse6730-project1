import platform

Import('env')

cppLibs = [
           'boost_program_options',
           ]

if platform.system() == 'Darwin':
  cppLibs = [lib + '-mt' for lib in cppLibs]

srcFiles = [
            'ProgramOptions.cpp',
            'Event.cpp',
            'Simulation.cpp',
            'TrafficEvent.cpp',
            ]

env.Program(target = env.targetName, source = srcFiles, LIBS = cppLibs)

env.Install(env.topDir, env.targetName)
